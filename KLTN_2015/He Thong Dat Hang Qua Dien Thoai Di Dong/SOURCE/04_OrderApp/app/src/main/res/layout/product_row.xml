<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/activatedBackgroundIndicator"
    android:weightSum="2"
    android:paddingLeft="3dp"
    android:paddingTop="15dp"
    android:paddingRight="3dp">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/productThumbnail"
        android:adjustViewBounds="true"
        android:scaleType="centerInside" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/txtView_productTitle"
        android:layout_gravity="center_horizontal"
        android:textColor="#006600"
        android:textStyle="normal|bold"
        android:capitalize="words"
        android:gravity="left|center_vertical"
        android:textSize="26dp"
        android:paddingLeft="10dp"
        android:paddingTop="5dp" />

    <TextView
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/txtView_productDescription"
        android:layout_weight="0.10"
        android:textAppearance="?android:attr/textAppearanceListItemSmall"
        android:layout_margin="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:paddingLeft="20dp"
        android:paddingRight="5dp"
        android:autoText="false"
        android:capitalize="sentences"
        android:textColor="@color/primary_dark_material_dark"
        android:textSize="14dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:layout_width="53dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/quanty"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="-4dp"
            android:textAlignment="gravity"
            android:gravity="center"
            android:background="#ffffff"
            android:textColor="#000"
            android:text="1"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="70dp"
            android:layout_height="31dp"
            android:id="@+id/btnAddCart"
            android:textSize="10dp"
            android:textAlignment="gravity"
            android:text="ThÃªm"
            android:paddingLeft="10dp"
            android:layout_marginLeft="3dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textAppearance="?android:attr/textAppearanceListItemSmall"
            android:minHeight="?android:attr/listPreferredItemHeightSmall"
            android:id="@+id/txtView_productPrice"
            android:text="asdasdasd"
            android:textAlignment="gravity"
            android:textStyle="bold"
            android:textColor="#dc0202"
            android:outlineProvider="paddedBounds"
            android:capitalize="sentences"
            android:gravity="center_vertical|right"
            android:paddingRight="3dp"
            android:singleLine="true"
            android:textSize="18dp"
            android:textIsSelectable="false"
            android:autoText="true" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textAppearance="?android:attr/textAppearanceListItemSmall"
            android:minHeight="?android:attr/listPreferredItemHeightSmall"
            android:id="@+id/txtView_productSaleOffPrice"
            android:text=""
            android:textAlignment="gravity"
            android:textStyle="bold"
            android:textColor="#dc0202"
            android:outlineProvider="paddedBounds"
            android:capitalize="sentences"
            android:gravity="center_vertical|right"
            android:paddingRight="3dp"
            android:singleLine="true"
            android:textSize="18dp"
            android:textIsSelectable="false"
            android:autoText="true"/>

    </LinearLayout>

</LinearLayout>