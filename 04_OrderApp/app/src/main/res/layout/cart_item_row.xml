<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/activatedBackgroundIndicator"
    android:weightSum="2"
    android:paddingLeft="3dp"
    android:paddingTop="15dp"
    android:paddingRight="3dp">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:id="@+id/txtView_productTitle"
            android:layout_gravity="center_horizontal"
            android:textColor="#006600"
            android:textStyle="normal|bold"
            android:capitalize="words"
            android:gravity="left|center_vertical"
            android:textSize="26dp"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:layout_weight="0.84" />

        <!--<ImageView-->
            <!--android:clickable="true"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:id="@+id/imgView_removeCartItem"-->
            <!--android:src="@drawable/ic_action_remove"-->
            <!--android:textAlignment="gravity"-->
            <!--android:layout_marginRight="5dp" />-->

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:textAppearance="?android:attr/textAppearanceListItemSmall"
            android:minHeight="?android:attr/listPreferredItemHeightSmall"
            android:id="@+id/textView4"
            android:text="Đơn giá:"
            android:textAlignment="gravity"
            android:textStyle="bold"
            android:textColor="#dc0202"
            android:outlineProvider="paddedBounds"
            android:capitalize="sentences"
            android:gravity="center_vertical|left"
            android:paddingRight="3dp"
            android:singleLine="true"
            android:textSize="18dp"
            android:textIsSelectable="false"
            android:autoText="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textAppearance="?android:attr/textAppearanceListItemSmall"
            android:minHeight="?android:attr/listPreferredItemHeightSmall"
            android:id="@+id/txtView_productPrice"
            android:text="asdasdasd"
            android:textAlignment="gravity"
            android:textStyle="bold"
            android:textColor="#dc0202"
            android:outlineProvider="paddedBounds"
            android:capitalize="sentences"
            android:gravity="center_vertical|right"
            android:paddingRight="3dp"
            android:singleLine="true"
            android:textSize="18dp"
            android:textIsSelectable="false"
            android:autoText="true" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:layout_width="53dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/txtEdit_productQuanty"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="-4dp"
            android:textAlignment="gravity"
            android:gravity="center"
            android:text="1" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="70dp"
            android:layout_height="31dp"
            android:id="@+id/btnEditItemCart"
            android:textSize="10dp"
            android:textAlignment="gravity"
            android:text="Sữa"
            android:paddingLeft="10dp"
            android:layout_marginLeft="3dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textAppearance="?android:attr/textAppearanceListItemSmall"
            android:minHeight="?android:attr/listPreferredItemHeightSmall"
            android:id="@+id/txtView_product_total"
            android:text="asdasdasd"
            android:textAlignment="gravity"
            android:textStyle="bold"
            android:textColor="#dc0202"
            android:outlineProvider="paddedBounds"
            android:capitalize="sentences"
            android:gravity="center_vertical|right"
            android:paddingRight="3dp"
            android:singleLine="true"
            android:textSize="18dp"
            android:textIsSelectable="false"
            android:autoText="true" />
    </LinearLayout>

</LinearLayout>