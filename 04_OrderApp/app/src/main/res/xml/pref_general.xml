<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="Cài đặt Chung">

        <EditTextPreference
            android:key="tk.order_sys.orderapp.settings.customer_name"
            android:title="@string/pref_title_display_name"
            android:defaultValue="@string/pref_default_display_name"
            android:selectAllOnFocus="true"
            android:inputType="textCapWords"
            android:capitalize="words"
            android:singleLine="true"
            android:maxLines="1" />

        <EditTextPreference
            android:key="tk.order_sys.orderapp.settings.customer_phone"
            android:title="@string/pref_title_display_phone"
            android:defaultValue="@string/pref_default_display_phone"
            android:selectAllOnFocus="true"
            android:capitalize="words"
            android:singleLine="true"
            android:inputType="number"
            android:maxLines="1" />

        <EditTextPreference
            android:key="tk.order_sys.orderapp.settings.customer_email"
            android:title="@string/pref_title_display_email"
            android:defaultValue="@string/pref_default_display_email"
            android:selectAllOnFocus="true"
            android:capitalize="words"
            android:singleLine="true"
            android:inputType="textEmailAddress"
            android:maxLines="1" />

    </PreferenceCategory>

</PreferenceScreen>
